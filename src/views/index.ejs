    <section class="resultados" id="resultados">
        <h1>Resultados</h1>
        <div class="containerTabla">
            <table>
                <thead>
                    <tr>
                        <th id="fecha">Fecha</th>
                        <th id="correo">Correo</th>
                        <th id="enfermedad">Enfermedad</th>
                    </tr>
                </thead>
                <tbody id="res">
                    <% pacientes.reverse().forEach(function (paciente){ %>
                        <tr>
                            <td><%= paciente.fecha %></td>
                            <td><%= paciente.email %></td>
                            <td><%= paciente.enfermedad %></td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
